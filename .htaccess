RewriteEngine On
RewriteBase /rental_mobil/

# Aturan untuk mengabaikan folder-folder penting secara eksplisit
RewriteRule ^(actions|admin|pelanggan|includes|assets)/ - [L]

# Aturan untuk URL mobil SEO-friendly
RewriteRule ^mobil/([0-9]+)/([a-zA-Z0-9-]+)/?$ actions/mobil/detail.php?id=$1 [L,QSA]

# Aturan catch-all untuk file yang tidak ada
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule . index.php [L]